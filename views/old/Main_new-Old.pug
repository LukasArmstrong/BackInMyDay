  #map
// Modal
#uploadModalCenter.modal.fade(tabindex='-1' role='dialog' aria-labelledby='uploadModalCenterTitle' aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header
        h5#uploadModalLongTitle.modal-title Upload Image
        button.close_modal(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        form.mt-4(action='/' method='POST' enctype='multipart/form-data')
          .form-group
            input#input-files.form-control-file.border(type='file' name='file')
          .row
            .col-sm-12
              .preview-images
          button.btn.btn-secondary.close_modal(type='button' data-dismiss='modal' data-target='#uploadModalCenter') Close
          button.btn.btn-primary.close_modal(type='submit') Submit
