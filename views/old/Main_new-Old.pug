// Splash Screen
.Splash-screen.bg-repeat
  img.mx-auto.d-block.BIMD_logo(src='images/support/AppLogo_whiteOutline_sqTp.png' alt='Back in my Day Logo' width='500' height='auto')
  .form-outline.d-flex.justify-content-center.mb-2
    input#splash_search.form-control.w-50.p-3.BIMD_search(type='search' placeholder='Person, Place, or Thing' aria-label='Search')
  .text-center.BIMD_upload_btn
    button#UploadBtn.btn.btn-primary.justify-content-center(type='button' data-toggle='modal' data-target='#uploadModalCenter') Upload Your Images!
// Main Website
.Main-container
  nav.navbar.navbar-expand-lg.navbar-light.bg-light.bg-repeat
    a.navbar-brand(href='#')
      img.d-inline-block.align-top(src='images/support/AppLogo_whiteOutline.png' width='100' height='69' alt='')
    #navbarSupportedContent.d-flex.mt-3.justify-content-start
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='#' style='color: white') History
        li.nav-item
          a.nav-link(href='#' style='color: white') About
      form.form-inline.ml-3.input-large
        input.form-control.BIMD_search(type='search' placeholder='Person, Place, or Thing' aria-label='Search')
